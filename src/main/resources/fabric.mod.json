{
  "schemaVersion": 1,
  "id": "modid",
  "version": "${version}",

  "name": "Trainguy's Block Sound Overhaul",
  "description": "Lightweight mod that aims to refresh many older block sounds by replacing them with modified versions of newer sounds.",
  "authors": [
    "Trainguy"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.trainguy.blocksoundoverhaul.BlockSoundOverhaul"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=16"
  },
  "suggests": {
    "another-mod": "*"
  }
}
